<div class="container">


  <figure class="center">
    <%= image_tag('LISTED-MOVIES-LOGO.png')%>
  </figure>

  <ul class="collection with-header center">
    <li class="collection-header"><h4>Top Movies</h4></li>
    <% @movies.first.class.top_5.collect do |movie| %>
      <li class="collection-item hoverable"><%= link_to movie.title, movie_path(movie) %></li>
    <% end %>
  </ul>

  <div class="row center"><%= link_to "Create New Movie", new_movie_path, class: "btn-large waves-effect waves-light teal lighten-1" %></div>

  <h4 class="center">All Movies</h4>
  <ul>
    <% @movies.each do |movie| %>
      <li class="center"><%= link_to movie.title, movie_path(movie) %></li>
    <% end %>
  </ul>


</div>
