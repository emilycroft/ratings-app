<h2>Reviews</h2>
<ul>
<% @artist.reviews.each do |review| %>
  <li>
    <label>User: </label>
    <%= review.user.username %>
    <br>
    <label>Rating: </label>
    <%= review.rating %>
    <br>
    <label>Review: </label>
    <%= review.content %>
  </li>
<% end %>
</ul>

<% if logged_in? %>
<h3>Create Review</h3>
<%= form_for(@review) do |f| %>

  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <br>
  <%= f.hidden_field :reviewable_id, :value => @artist.id %>
  <%= f.hidden_field :reviewable_type, :value => "Artist" %>
  <%= f.submit %>

  <% end %>
<% end %>
