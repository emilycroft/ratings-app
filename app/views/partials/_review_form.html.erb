<h3>Your Review</h3>
<%= form_for(@review) do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <br>
  <%= f.hidden_field :reviewable_id, :value => @review.reviewable.id %>
  <%= f.hidden_field :reviewable_type, :value => @review.reviewable.class.to_s %>
  <%= f.submit %>
<% end %>
