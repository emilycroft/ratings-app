<!DOCTYPE html>
<html>
  <head>
    <title>RatingsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="" role="navigation">
      <div class="nav-wrapper container">
        <ul>
          <li><%= link_to "Home", homepage_path %></li>
          <li><%= link_to "Books", books_path %></li>
          <li><%= link_to "Movies", movies_path %></li>
          <li><%= link_to "Video Games", video_games_path %></li>
          <li><%= link_to "Artists", artists_path %></li>
          <% if logged_in? %>
            <li class="right"><%= link_to "Logout", '/sessions/:id', method: 'delete' %></li>
            <li class="right"><%= link_to "Profile", user_path(current_user) %></li>
          <% else %>
            <li class="right"><%= link_to "Login", new_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <% if flash[:notice] %>
      <div class="card-panel teal lighten-2 flow-text center"><p><%= flash[:notice] %></p></div>
    <% end %>
    <%= yield %>
  </body>
</html>
